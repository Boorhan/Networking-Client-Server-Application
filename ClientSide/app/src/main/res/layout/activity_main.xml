                android:layout_toRightOf="@+id/buttonB"
                android:background="@drawable/ll" />

            <Button
                android:id="@+id/buttonK"
                android:layout_width="38dp"
                android:layout_height="31dp"
                android:layout_alignTop="@+id/buttonA"
                android:layout_toEndOf="@+id/buttonA"

                android:layout_toRightOf="@+id/buttonA"
                android:background="@drawable/kk"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstRow"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_margin="0dp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/secondRow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <Button
                android:id="@+id/buttonJ"
                android:layout_width="38dp"
                android:layout_height="31dp"
                android:layout_alignTop="@+id/buttonA"
                android:layout_toEndOf="@+id/buttonI"
                android:layout_toRightOf="@+id/buttonB"
                android:background="@drawable/jj" />

            <Button
                android:id="@+id/buttonI"
                android:layout_width="38dp"
