                android:background="@drawable/ff" />

            <Button
                android:id="@+id/buttonE"
                android:layout_width="38dp"
                android:layout_height="31dp"
                android:layout_alignTop="@+id/buttonA"
                android:layout_toEndOf="@+id/buttonD"

                android:layout_toRightOf="@+id/buttonB"
                android:background="@drawable/ee" />

            <Button
                android:id="@+id/buttonD"
                android:layout_width="38dp"
                android:layout_height="31dp"
                android:layout_alignTop="@+id/buttonA"
                android:layout_toEndOf="@+id/buttonC"

                android:layout_toRightOf="@+id/buttonB"
                android:background="@drawable/dd" />

            <Button
                android:id="@+id/buttonC"
                android:layout_width="38dp"
                android:layout_height="31dp"
                android:layout_alignTop="@+id/buttonA"
                android:layout_toEndOf="@+id/buttonB"

                android:layout_toRightOf="@+id/buttonB"
                android:background="@drawable/cc" />

            <Button
                android:id="@+id/buttonB"
                android:layout_width="38dp"
                android:layout_height="31dp"
                android:layout_alignTop="@+id/buttonA"
                android:layout_toEndOf="@+id/buttonA"

                android:layout_toRightOf="@+id/buttonA"
                android:background="@drawable/bb"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/buttonA"
                android:layout_width="38dp"
                android:layout_height="31dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/aa" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourthRow"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_margin="0dp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/Space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <Button
                android:id="@+id/You"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignTop="@+id/buttonA"
                android:layout_toEndOf="@+id/buttonG"

                android:layout_toRightOf="@+id/buttonB"
                android:background="@drawable/you" />

            <Button
                android:id="@+id/OK"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignTop="@+id/buttonA"
                android:layout_toEndOf="@+id/buttonF"

                android:layout_toRightOf="@+id/buttonB"
                android:background="@drawable/okay" />

            <Button
                android:id="@+id/teacher"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignTop="@+id/buttonA"
                android:layout_toEndOf="@+id/buttonE"

                android:layout_toRightOf="@+id/buttonB"
                android:background="@drawable/teacher" />

            <Button
                android:id="@+id/House"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignTop="@+id/buttonA"
                android:layout_toEndOf="@+id/buttonD"

                android:layout_toRightOf="@+id/buttonB"
                android:background="@drawable/house" />

            <Button
                android:id="@+id/Nice"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignTop="@+id/buttonA"
                android:layout_toEndOf="@+id/buttonC"

                android:layout_toRightOf="@+id/buttonB"
                android:background="@drawable/nice" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text=" "
            android:textColor="@color/typing"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.421" />

        <Button
            android:id="@+id/Space"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/mybutton"
            android:text="space"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/crossButton"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/mybutton"
            android:text="X"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Space"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/signToAudioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/mybutton"
            android:text="DONE!"
            app:layout_constraintBottom_toTopOf="@+id/firstRow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/loginPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat Client"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User name" />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IPv4Address" />

        <EditText
            android:id="@+id/portNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter port number(4 digit)"/>

        <Button
            android:id="@+id/connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Connect..." />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chatpanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat Client"
            android:textSize="15sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/say"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Say something" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/speechText"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:onClick="getSpeechInput"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="Take Speech input"/>

            <Button
                android:id="@+id/signText"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:onClick="getSign"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:text="Take Sign input" />

        </LinearLayout>

        <Button
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textColor="@color/green"
            android:textStyle="bold"/>


        <Button
            android:id="@+id/disconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disconnect"
            android:textColor="@color/red"
            android:textStyle="bold"
             />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/saveMsg"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Save MSG"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"/>

            <Button
                android:id="@+id/sendFile"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Share File's Text"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/chatmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/typing"/>
        </ScrollView>

    </LinearLayout>

</LinearLayout>